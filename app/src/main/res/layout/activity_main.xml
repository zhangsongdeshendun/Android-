<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.zhangsongdeshendun.customcircle.CustomBudgetProgress
        android:id="@+id/progress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:progress="0"
        app:budget_background_radius="30dp" />

    <com.example.zhangsongdeshendun.customcircle.CustomBudgetProgress
        android:id="@+id/progress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:progress="0"
        app:budget_background_color="#ffed0b"
        app:budget_background_radius="30dp" />

    <com.example.zhangsongdeshendun.customcircle.CustomBudgetProgress
        android:id="@+id/progress3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:progress="0"
        app:budget_background_color="#FF4081"
        app:budget_background_radius="40dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="开始你的表演" />


</RelativeLayout>
